<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:padding="15dip" android:background="@android:color/background_dark"
    style="@style/AppTheme"
    android:foregroundGravity="center_vertical|center_horizontal"
    android:theme="@style/AppTheme"
    tools:context=".AboutActivity">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:isScrollContainer="true" android:scrollbars="vertical" android:background="@android:color/background_dark"
        style="@style/AppTheme"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:orientation="vertical">
                <ImageView android:src="@drawable/ic_launcher"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="top" android:layout_marginRight="10dp"
                    android:contentDescription="@string/AboutImage" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:orientation="vertical">
                <TextView android:text="@string/MyPlayer.ApplicationName"
                    android:textStyle="bold" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/AboutActivity.VersionText"
                    android:text="@+id/AboutActivity.VersionText"
                    android:textSize="11.5sp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="@string/MyPlayer.ApplicationDescription"
                    android:textSize="11.0sp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp" />
                <TextView android:id="@+id/AboutActivity.LicenseText"
                    android:text="@+id/AboutActivity.UrlText"
                    android:textSize="12.5sp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp" />
                <TextView android:id="@+id/AboutActivity.UrlText"
                    android:text="@+id/AboutActivity.UrlText"
                    android:textSize="11.0sp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp" android:autoLink="web"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/AboutActivity.CloseBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="30dip"
            android:text="@string/AboutActivity.CloseBtn"
            >

        </Button>
    </LinearLayout>
</ScrollView>
